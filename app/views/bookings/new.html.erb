<h1>Flight details</h1>
<div>Flight ID: <%= @flight.id %> </div>
<div>Departure airport: <%= @flight.departure_airport.code %> </div>
<div>Arrival airport: <%= @flight.arrival_airport.code %> </div>
<div>Departure time: <%= @flight.departure_time %> </div>
<h2>Booking form</h2>
<%= form_with model: @Booking, local: true do |f|%>
  <% @num_tickets.times do |i| %>
    <div>
      <%= f.fields_for @passengers[i] do |sub_f| %>
        <%= sub_f.label :name, 'Name:' %>
        <%= sub_f.text_field :name %>
        <%= sub_f.label :email, 'Email:' %>
        <%= sub_f.email_field :email %>
      <% end %>
    </div>
  <% end %>
<% end %>