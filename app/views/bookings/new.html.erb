<header class="container">
  <h1>Flight details</h1>
</header>
<main class="container">
  <section>
    <div>Flight ID: <%= @flight.id %> </div>
    <div>Departure airport: <%= @flight.departure_airport.code %> </div>
    <div>Arrival airport: <%= @flight.arrival_airport.code %> </div>
    <div>Departure time: <%= @flight.departure_time %> </div>
  </section>
  <section>
    <h2>Booking form</h2>
    <%= form_with model: @booking do |f|%>
      <%= f.hidden_field :flight_id, value: @flight.id %>
      <%= f.fields_for :passengers do |passengers_f| %>
        <div class="grid" >
          <%= passengers_f.label :name do %>
            Name:
            <%= passengers_f.text_field :name %>
          <% end %>
          <%= passengers_f.label :email do %>
            Email:
            <%= passengers_f.email_field :email %>
          <% end %>
        </div>
      <% end %>
      <%= f.submit 'Submit' %>
    <% end %>
  </section>
</main>
